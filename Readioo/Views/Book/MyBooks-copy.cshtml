<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Books - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/my_books.css?v=@DateTime.Now.Ticks">
</head>
<body>
    <div class="wrap" id="app">
        <header class="page-header">
            <div class="page-meta">
                <div class="page-title">My Books</div>
                <div class="page-subtitle">Track your reading journey</div>
            </div>
            <div class="stats-row">
                <div class="stat"><strong></strong> Books Added</div>
            </div>
        </header>

        <div class="main-layout">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="card">
                    <h3>My Bookshelves</h3>
                    <ul class="shelf-list" id="shelfList">
                        <li class="active" data-shelf="all">All Books</li>
                        @foreach (var shelf in Model)
                        {
                            <li data-shelf="@shelf.ShelfName.ToLower().Replace(" ", "-")">@shelf.ShelfName</li>
                        }
                    </ul>
                </div>
            </aside>

            <!-- Main Content -->
            <section class="main-content">
                <h2 class="section-title" id="sectionTitle">All Books</h2>

                <div class="books-table-container">
                    <table class="books-table">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Author</th>
                                <th>My Rating</th>
                                <th>Date Added</th>
                                <th>Bookshelf</th>
                            </tr>
                        </thead>
                        <tbody id="booksTableBody">
                            @foreach (var shelf in Model)
                            {
                                @foreach (var book in shelf.BookShelves.Select(bs => bs.Book))
                                {
                                    <tr data-shelves="@string.Join(",", book.BookShelves.Select(bs => bs.Shelf.ShelfName.ToLower().Replace(" ", "-")))">
                                        <td>
                                            <div class="book-title-cell">
                                                <div class="table-book-cover">
                                                    <img src="~/@book.BookImage" alt="@book.Title" />
                                                </div>
                                                <div class="book-title-info">
                                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="book-link">@book.Title</a>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@book.Author.FullName</td>
                                        <td>
                                            <div class="rating-cell">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < book.Rate)
                                                    {
                                                        <i class="fas fa-star" style="color:#f6b438"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star" style="color:#e0e0e0"></i>
                                                    }
                                                }
                                            </div>
                                        </td>
                                        <td>@book.PublishDate.ToShortDateString()</td>
                                        <td>
                                            @foreach (var bs in book.BookShelves)
                                            {
                                                <span class="shelf-tag">@bs.Shelf.ShelfName</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/my_books.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>
