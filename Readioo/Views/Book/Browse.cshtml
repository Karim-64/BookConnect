@using Readioo.Business.DataTransferObjects.Book
@using Readioo.Business.DataTransferObjects.Genre
@model IEnumerable<BookDto>

@{
    ViewData["Title"] = "Browse Books";
    var genres = ViewBag.Genres as IEnumerable<GenreDto>;

    // --- Pagination Logic ---
    // Controller passes these via ViewBag
    // Safe casting using nullable int to avoid errors if null
    int currentPage = (ViewBag.CurrentPage as int?) ?? 1;
    int totalPages = (ViewBag.TotalPages as int?) ?? 1;
}

<!-- Google Fonts Import -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Inter:wght@400;500;600&display=swap" rel="stylesheet"><!-- Toastr CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<!-- Toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<style>
    /* -----------------------------------------------------------------
           THEME VARIABLES & TYPOGRAPHY
           ----------------------------------------------------------------- */
    :root {
        --brand-navy: #002B5B;
        --brand-orange: #FF9F1C;
        --brand-orange-soft: #fff3e0;
        --bg-warm: #fdfbf7; /* Warmer, paper-like background */
        --text-dark: #2c3e50;
    }

    body {
        background-color: var(--bg-warm);
        color: var(--text-dark);
    }

    .font-serif {
        font-family: 'Merriweather', serif;
    }

    .font-sans {
        font-family: 'Inter', sans-serif;
    }

    .text-navy {
        color: var(--brand-navy) !important;
    }

    .text-orange {
        color: var(--brand-orange) !important;
    }

    /* -----------------------------------------------------------------
           SIDEBAR FILTERS
           ----------------------------------------------------------------- */
    .filter-panel {
        background: #fff;
    }

    .list-group-item {
        border: none;
        padding: 12px 20px;
        color: #555;
        font-weight: 500;
        transition: all 0.2s ease;
        margin-bottom: 2px;
        background: transparent;
        border-left: 4px solid transparent; /* Prepare for accent border */
        cursor: pointer; /* Added for JS interaction */
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
            color: var(--brand-navy);
            padding-left: 25px;
        }

        /* New Active State: Left Border Accent */
        .list-group-item.active-filter {
            background-color: #f0f4f8;
            color: var(--brand-navy);
            border-left-color: var(--brand-navy);
            font-weight: 600;
        }

            .list-group-item.active-filter:hover {
                padding-left: 20px;
            }

        .list-group-item .fa-chevron-right {
            opacity: 0;
            transition: opacity 0.2s;
        }

        .list-group-item.active-filter .fa-chevron-right {
            opacity: 1;
        }

    /* -----------------------------------------------------------------
           BOOK CARD & COVER PRESENTATION
           ----------------------------------------------------------------- */
    .book-card {
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s;
        background: white;
        overflow: hidden;
    }

        .book-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0, 43, 91, 0.12) !important;
        }

    .book-cover-container {
        height: 340px;
        position: relative;
        background-color: #f1f1f1;
        overflow: hidden;
    }

    /* The blurred background layer */
    .book-cover-blur {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-size: cover;
        background-position: center;
        filter: blur(15px) brightness(0.9);
        transform: scale(1.1); /* Prevent white edges from blur */
    }

    /* The main crisp image */
    .book-cover-img {
        position: relative;
        width: 100%;
        height: 100%;
        object-fit: contain; /* Ensures the whole cover is seen */
        z-index: 1;
        transition: transform 0.5s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2); /* Shadow for the book itself */
    }

    .book-card:hover .book-cover-img {
        transform: scale(1.05);
    }

    .link-hover-orange:hover {
        color: var(--brand-orange) !important;
    }

    /* -----------------------------------------------------------------
           BUTTONS & PAGINATION
           ----------------------------------------------------------------- */
    /* Soft Orange Button for 'Want to Read' */
    .btn-soft-orange {
        background-color: var(--brand-orange-soft);
        color: #d35400; /* Darker orange for text contrast */
        border: 1px solid transparent;
        transition: all 0.2s;
    }

        .btn-soft-orange:hover {
            background-color: var(--brand-orange);
            color: white;
            box-shadow: 0 4px 10px rgba(255, 159, 28, 0.3);
        }

    /* Toolbar Buttons */
    .btn-outline-light.text-secondary {
        border-color: #dee2e6;
    }

        .btn-outline-light.text-secondary.active {
            background-color: var(--brand-navy);
            color: white !important;
            border-color: var(--brand-navy);
        }

    /* Pagination */
    .page-link {
        color: var(--brand-navy);
        background-color: transparent;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        transition: all 0.2s;
    }

        .page-link:hover {
            background-color: #e9ecef;
            color: var(--brand-orange);
        }

    .page-item.active .page-link {
        background-color: var(--brand-navy);
        color: white;
    }

    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background-color: transparent;
        opacity: 0.6;
    }

    .z-2 {
        z-index: 2;
    }

    /* -----------------------------------------------------------------
           LIST VIEW TOGGLE STYLES
           ----------------------------------------------------------------- */
    /* When #bookGrid has class .list-view */
    #bookGrid.list-view .book-item {
        width: 100%;
        flex: 0 0 100%;
        max-width: 100%;
    }

    #bookGrid.list-view .book-card {
        flex-direction: row;
        height: auto;
        min-height: 220px;
    }

    #bookGrid.list-view .book-cover-container {
        width: 180px;
        height: auto; /* Match card height */
        flex-shrink: 0;
    }

    #bookGrid.list-view .card-body {
        justify-content: center;
        padding-left: 2rem !important;
        padding-right: 2rem !important;
    }

    /* Adjustments for list view responsiveness */
    @@media (max-width: 576px) {
        #bookGrid.list-view .book-card {
            flex-direction: column;
        }

        #bookGrid.list-view .book-cover-container {
            width: 100%;
            height: 300px;
        }
    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        $('#btnList').click(function() {
            $('#bookGrid').addClass('list-view');
            $('#btnList').addClass('active');
            $('#btnGrid').removeClass('active');
        });

        $('#btnGrid').click(function() {
            $('#bookGrid').removeClass('list-view');
            $('#btnGrid').addClass('active');
            $('#btnList').removeClass('active');
        });

        $('#genreFilter .list-group-item').click(function() {
            $('#genreFilter .list-group-item').removeClass('active-filter');
            $(this).addClass('active-filter');

            var selectedGenre = $(this).data('genre');
            var visibleCount = 0;

            if(selectedGenre === 'all') {
                $('#bookGrid .book-item').fadeIn(300);
                visibleCount = $('#bookGrid .book-item').length;
            } else {
                $('#bookGrid .book-item').hide();

                $('#bookGrid .book-item').filter(function() {
                     var genres = $(this).data('genre');
                     return genres && genres.toLowerCase().indexOf(selectedGenre.toLowerCase()) > -1;
                }).fadeIn(300);

                visibleCount = $('#bookGrid .book-item').filter(function() {
                     var genres = $(this).data('genre');
                     return genres && genres.toLowerCase().indexOf(selectedGenre.toLowerCase()) > -1;
                }).length;
            }

            if (visibleCount === 0) {
                $('#noResultsMessage').removeClass('d-none');
            } else {
                $('#noResultsMessage').addClass('d-none');
            }
        });
    });
</script>

<div class="container my-5">

    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-12 border-bottom pb-3">
            <h1 class="display-5 fw-bold font-serif text-navy">
                <i class="fa-solid fa-compass me-2"></i>Browse Collection
            </h1>
            <p class="lead text-muted mb-0 font-sans">Discover your next great adventure from our vast library.</p>
        </div>
    </div>

    <!-- Main Grid Layout -->
    <div class="row">

        <!-- Sidebar Filters -->
        <aside class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-3 filter-panel sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-2">
                    <h5 class="fw-bold text-navy font-serif">
                        <i class="fa-solid fa-filter me-2 text-orange"></i>Filter by Genre
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush font-sans" id="genreFilter">
                        <!-- 'All' Option -->
                        <button type="button" 
                                class="list-group-item list-group-item-action active-filter d-flex justify-content-between align-items-center" 
                                data-genre="all">
                            <span><i class="fa-solid fa-layer-group me-2 opacity-50"></i>All Genres</span>

                            <i class="fa-solid fa-chevron-right small"></i>
                        </button>

                        <!-- Dynamic Genre List -->
                        @if (genres != null && genres.Any())
                        {
                            foreach (var genre in genres)
                            {
                                <button type="button" 
                                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" 
                                        data-genre="@genre.GenreName.ToLower()">
                                    @genre.GenreName
                                </button>
                            }
                        }
                        else
                        {
                            <button class="list-group-item list-group-item-action">No Genres Loaded</button>
                        }

                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <section class="col-lg-9">

            <!-- Toolbar -->
            <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white rounded shadow-sm border toolbar-container">
                <div class="d-flex align-items-center">
                    <span class="text-muted small me-2 font-sans">Page @currentPage of @totalPages</span>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <!-- View Toggles -->
                    <div class="btn-group" role="group" aria-label="View toggle">
                        <button type="button" class="btn btn-lg btn-outline-light text-secondary active" id="btnGrid" style="width: 60px;">
                            <i class="fa-solid fa-border-all"></i>
                        </button>
                        <button type="button" class="btn btn-lg btn-outline-light text-secondary" id="btnList" style="width: 60px;">
                            <i class="fa-solid fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Book Grid/List Container -->
            <div class="row g-4" id="bookGrid">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        var imageUrl = !string.IsNullOrEmpty(item.BookImage) ? Url.Content("~/" + item.BookImage) : "https://placehold.co/300x450?text=No+Cover";
                        var genreString = item.BookGenres != null ? string.Join(" ", item.BookGenres).ToLower() : "";

                        <div class="col-sm-6 col-md-4 col-xl-4 book-item" data-genre="@genreString">
                            <div class="card h-100 border-0 shadow-sm book-card">
                                <div class="book-cover-container">
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@item.BookId" class="d-block h-100 w-100 position-relative overflow-hidden">
                                        <div class="book-cover-blur" style="background-image: url('@imageUrl');"></div>
                                        <img src="@imageUrl" class="book-cover-img" alt="@item.Title" onerror="this.src='https://placehold.co/300x450?text=No+Cover'">
                                    </a>
                                </div>

                                <div class="card-body d-flex flex-column p-3">
                                    <h5 class="card-title fw-bold text-truncate mb-1 font-serif">
                                        <a asp-controller="Book" asp-action="Details" asp-route-id="@item.BookId" class="text-decoration-none text-navy stretched-link link-hover-orange">
                                            @item.Title
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted small mb-2 font-sans">@item.AuthorName</p>

                                    <div class="mb-3">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < item.Rate)
                                            {
                                                <i class="fa-solid fa-star text-warning small"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-regular fa-star text-muted small opacity-25"></i>
                                            }
                                        }
                                        <span class="text-muted small ms-1 fw-semibold">(@item.Rate.ToString("0.0"))</span>
                                    </div>

                                    <div class="mt-auto position-relative z-2">
                                        <form asp-controller="Book" asp-action="AddToShelf" method="post" class="d-grid">
                                            <input type="hidden" name="bookId" value="@item.BookId" />
                                            <input type="hidden" name="shelfName" value="Want to Read" />
                                            <button type="submit" class="btn btn-sm btn-soft-orange w-100 rounded-pill font-sans fw-bold">
                                                <i class="fa-solid fa-plus me-1"></i> Want to Read
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="fa-solid fa-book-open fa-3x text-muted mb-3 opacity-25"></i>
                        <h4 class="text-muted font-serif">No books found in the collection.</h4>
                    </div>
                }
            </div>

            <div id="noResultsMessage" class="text-center py-5 d-none">
                <i class="fa-solid fa-filter-circle-xmark fa-3x text-muted mb-3 opacity-25"></i>
                <h4 class="text-muted font-serif">No books found for this genre.</h4>
            </div>

            
            <!-- Dynamic Pagination UI -->
            @if (totalPages >1)
            {
                <nav aria-label="Page navigation" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle mx-1" 
                               asp-controller="Book" 
                               asp-action="Browse" 
                               asp-route-page="@(currentPage - 1)" 
                               aria-label="Previous">
                                <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>

                        @{
                            int startPage = Math.Max(1, currentPage - 2);
                            int endPage = Math.Min(totalPages, currentPage + 2);
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item"><a class="page-link border-0 rounded-circle mx-1" asp-action="Browse" asp-route-page="1">1</a></li>
                            @if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link border-0 rounded-circle mx-1">...</span></li>
                            }
                        }

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link border-0 rounded-circle mx-1 shadow-sm" 
                                   asp-controller="Book" 
                                   asp-action="Browse" 
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (endPage < totalPages)
                        {
                            @if (endPage < totalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link border-0 rounded-circle mx-1">...</span></li>
                            }
                            <li class="page-item"><a class="page-link border-0 rounded-circle mx-1" asp-action="Browse" asp-route-page="@totalPages">@totalPages</a></li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle mx-1" 
                               asp-controller="Book" 
                               asp-action="Browse" 
                               asp-route-page="@(currentPage + 1)" 
                               aria-label="Next">
                                <i class="fa-solid fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }

        </section>
    </div>
</div>