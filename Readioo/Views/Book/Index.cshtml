@using Readioo.Business.DataTransferObjects.Book
@model IEnumerable<BookDto>

@{
    ViewData["Title"] = "Books";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link rel="stylesheet" href="~/css/site.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container my-5">

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <div>
            <h1 class="display-6 fw-bold" style="color: #002B5B;">
                <i class="fa-solid fa-book-open me-2"></i>Books Library
            </h1>
            <p class="text-muted mb-0">Manage your collection, update details, or add new titles.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-brand-primary shadow-sm">
                <i class="fa-solid fa-plus me-2"></i>Add New Book
            </a>
        </div>
    </div>

    <!-- Data Table Card -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-navy text-white">
                    <tr>
                        <th class="py-3 ps-4">Cover</th>
                        <th class="py-3">Title / Author</th>
                        <th class="py-3">ISBN / Lang</th>
                        <th class="py-3">Pages</th>
                        <th class="py-3">Rating</th>
                        <th class="py-3" style="width: 20%;">Genres</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var book in Model)
                    {
                        <tr>
                            <!-- Cover Image -->
                            <td class="ps-4">
                                <div class="book-cover-wrapper">
                                    @if (!string.IsNullOrEmpty(book.BookImage))
                                    {
                                        <img src="~/@book.BookImage" alt="Cover"
                                             class="rounded shadow-sm"
                                             style="height: 70px; width: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="no-cover d-flex align-items-center justify-content-center rounded shadow-sm">
                                            <i class="fa-regular fa-image text-muted"></i>
                                        </div>
                                    }
                                </div>
                            </td>

                            <!-- Title & Author -->
                            <td>
                                <div class="d-flex flex-column">
                                    <a asp-action="Details" asp-route-id="@book.BookId"
                                       class="fw-bold text-navy text-decoration-none book-title-link">
                                        @book.Title
                                    </a>
                                    <a asp-controller="Author" asp-action="Details" asp-route-id="@book.AuthorId"
                                       class="small text-muted text-decoration-none mt-1">
                                        <i class="fa-solid fa-pen-nib me-1 small"></i>@book.AuthorName
                                    </a>
                                </div>
                            </td>

                            <!-- ISBN & Lang -->
                            <td>
                                <div class="d-flex flex-column small">
                                    <span class="text-dark fw-semibold">@book.Isbn</span>
                                    <span class="text-muted text-uppercase">@book.Language</span>
                                </div>
                            </td>

                            <!-- Pages -->
                            <td>
                                <span class="badge bg-light text-dark border">@book.PagesCount p</span>
                            </td>

                            <!-- Rate -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="text-warning me-1"><i class="fa-solid fa-star"></i></span>
                                    <span class="fw-bold text-dark">@book.Rate.ToString("0.0")</span>
                                </div>
                            </td>

                            <!-- Genres -->
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    @if (book.Genres != null && book.Genres.Any())
                                    {
                                        @foreach (var genre in book.Genres)
                                        {
                                            <a asp-controller="Genre" asp-action="Details" asp-route-id="@genre.Id"
                                               class="genre-badge text-decoration-none">
                                                @genre.GenreName
                                            </a>
                                        }
                                    }
                                    else if (book.BookGenres != null && book.BookGenres.Any())
                                    {
                                        @foreach (var genreName in book.BookGenres)
                                        {
                                            <span class="genre-badge">@genreName</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">No Genres</span>
                                    }
                                </div>
                            </td>

                            <!-- Actions -->
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@book.BookId"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@book.BookId"
                                       class="btn btn-sm btn-outline-navy"
                                       title="Edit Book">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@book.BookId" method="post" class="d-inline" style="margin:0;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-end border-start-0"
                                                title="Delete Book"
                                                onclick="return confirm('Are you sure you want to delete \'@book.Title\'?');">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <br />
        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-muted hover-navy">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Admin Dashboard
        </a>
    </div>
</div>

<style>
    :root {
        --brand-navy: #002B5B;
        --brand-orange: #FF9F1C;
        --bg-light: #f4f7f6;
    }

    body {
        background-color: var(--bg-light);
    }

    /* Header Styles */
    .bg-navy {
        background-color: var(--brand-navy) !important;
        color: white;
    }

    /* Button Brand Primary */
    .btn-brand-primary {
        background-color: var(--brand-navy);
        color: white;
        border: none;
        padding: 10px 24px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s;
    }

        .btn-brand-primary:hover {
            background-color: #001f42;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 43, 91, 0.3);
        }

    /* Table Styles */
    .table-hover tbody tr:hover {
        background-color: #fcfcfc;
    }

    .text-navy {
        color: var(--brand-navy) !important;
    }

    .book-title-link:hover {
        color: var(--brand-orange) !important;
        text-decoration: underline !important;
    }

    .no-cover {
        height: 70px;
        width: 50px;
        background-color: #e9ecef;
        font-size: 1.2rem;
    }

    /* Genre Badges */
    .genre-badge {
        font-size: 0.75rem;
        padding: 4px 10px;
        border-radius: 12px;
        background-color: #fff;
        color: var(--brand-navy);
        border: 1px solid #dee2e6;
        transition: all 0.2s;
        display: inline-block;
    }

    a.genre-badge:hover {
        background-color: var(--brand-navy);
        color: white;
        border-color: var(--brand-navy);
    }

    /* Action Buttons */
    .btn-outline-navy {
        color: var(--brand-navy);
        border-color: #dee2e6; /* Match group border */
    }

        .btn-outline-navy:hover {
            background-color: var(--brand-navy);
            color: white;
            border-color: var(--brand-navy);
        }

    /* Fix for button groups to look seamless */
    .btn-group .btn {
        margin: 0;
    }

    .hover-navy:hover {
        color: var(--brand-navy) !important;
        text-decoration: underline !important;
    }
</style>