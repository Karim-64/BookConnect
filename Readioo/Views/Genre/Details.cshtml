@using Readioo.Business.DataTransferObjects.Genre
@model GenreDetailsDto

@{
    ViewData["Title"] = Model.GenreName + " - Readioo";

    // --- Helper Method to resolve images ---
    string ResolveImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath)) return null;
        if (imagePath.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return imagePath;
        if (imagePath.StartsWith("~") || imagePath.StartsWith("/")) return Url.Content(imagePath);
        return Url.Content("~/" + imagePath);
    }

    // Generate a branded placeholder avatar for the Genre Cover
    var genreImg = "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(Model.GenreName) + "&size=400&background=f1f5f9&color=002B5B&bold=true";
}

<!-- Google Fonts Import -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<div class="container my-5">

    <!-- Navigation -->
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted hover-navy font-sans">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Genres
        </a>
    </div>

    <!-- Genre Profile Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-5">
        <div class="row g-0">
            <!-- Genre Image Column -->
            <div class="col-md-4 col-lg-3 bg-light d-flex align-items-center justify-content-center p-4 position-relative">
                <div class="genre-image-wrapper shadow-sm">
                    <img src="@genreImg" alt="@Model.GenreName" class="img-fluid" />
                </div>
            </div>

            <!-- Genre Info Column -->
            <div class="col-md-8 col-lg-9">
                <div class="card-body p-4 p-lg-5 d-flex flex-column h-100">

                    <!-- Header -->
                    <div class="mb-4">
                        <h1 class="display-4 fw-bold text-navy font-serif mb-2">@Model.GenreName</h1>

                        <!-- Stats Badges -->
                        <div class="d-flex flex-wrap gap-2 font-sans">
                            <span class="badge bg-navy rounded-pill px-3 py-2 fw-normal">
                                <i class="fa-solid fa-layer-group me-2 text-orange"></i>Genre
                            </span>
                            <span class="badge bg-light text-secondary border rounded-pill px-3 py-2 fw-normal">
                                <i class="fa-solid fa-book me-2"></i>@(Model.Books?.Count ?? 0) Books
                            </span>
                            <span class="badge bg-light text-secondary border rounded-pill px-3 py-2 fw-normal">
                                <i class="fa-solid fa-pen-nib me-2"></i>@(Model.Authors?.Count ?? 0) Authors
                            </span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4 flex-grow-1">
                        <h5 class="fw-bold text-navy font-sans mb-3">About this Genre</h5>
                        <div class="bio-container font-serif text-secondary position-relative">
                            <p id="descText" class="bio-text collapsed mb-0">
                                @(string.IsNullOrEmpty(Model.Description) ? "No description available for this genre." : Model.Description)
                            </p>
                            @if (!string.IsNullOrEmpty(Model.Description) && Model.Description.Length > 300)
                            {
                                <button id="toggleDesc" class="btn btn-link p-0 mt-2 text-orange text-decoration-none fw-bold font-sans small">
                                    Read More <i class="fa-solid fa-chevron-down ms-1"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Section -->
    <div class="section-container mb-5">
        <div class="d-flex align-items-center mb-4 border-bottom pb-3">
            <h3 class="fw-bold text-navy font-serif mb-0">
                <i class="fa-solid fa-book-open me-2 text-orange"></i>Books in @Model.GenreName
            </h3>
        </div>

        @if (Model.Books != null && Model.Books.Any())
        {
            <div class="row g-4">
                @foreach (var book in Model.Books)
                {
                    var bookImgUrl = ResolveImagePath(book.BookImage);

                    <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                        <div class="card h-100 border-0 shadow-sm item-card">
                            <a href="@Url.Action("Details", "Book", new { id = book.BookId })" class="text-decoration-none">
                                <div class="position-relative img-wrapper">
                                    <img src="@(string.IsNullOrEmpty(bookImgUrl) ? "https://placehold.co/180x250?text=No+Cover" : bookImgUrl)"
                                         class="card-img-top"
                                         alt="@book.Title"
                                         onerror="this.src='https://placehold.co/180x250?text=No+Cover'" />
                                </div>
                                <div class="card-body p-3">
                                    <div class="card-title text-navy font-serif" title="@book.Title">@book.Title</div>
                                    <div class="d-flex align-items-center small mt-2">
                                        <i class="fa-solid fa-star text-warning me-1"></i>
                                        <span class="fw-bold text-dark">@book.Rate.ToString("0.0")</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                <i class="fa-solid fa-book fa-3x text-muted mb-3 opacity-25"></i>
                <h5 class="text-muted font-serif">No books found in this genre.</h5>
            </div>
        }
    </div>

    <!-- Authors Section -->
    <div class="section-container">
        <div class="d-flex align-items-center mb-4 border-bottom pb-3">
            <h3 class="fw-bold text-navy font-serif mb-0">
                <i class="fa-solid fa-users me-2 text-orange"></i>Popular Authors
            </h3>
        </div>

        @if (Model.Authors != null && Model.Authors.Any())
        {
            <div class="row g-4">
                @foreach (var author in Model.Authors)
                {
                    var authorImg = ResolveImagePath(author.AuthorImage);
                    if (string.IsNullOrEmpty(authorImg))
                    {
                        authorImg = "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(author.FullName) + "&size=200&background=f1f5f9&color=002B5B&bold=true";
                    }

                    <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                        <div class="card h-100 border-0 shadow-sm item-card">
                            <a href="@Url.Action("Details", "Author", new { id = author.AuthorId })" class="text-decoration-none">
                                <div class="position-relative img-wrapper">
                                    <img src="@authorImg" class="card-img-top" alt="@author.FullName" />
                                </div>
                                <div class="card-body p-3 text-center">
                                    <div class="card-title text-navy font-sans fw-bold">@author.FullName</div>
                                    <small class="text-muted font-sans">View Profile</small>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                <i class="fa-solid fa-user-slash fa-3x text-muted mb-3 opacity-25"></i>
                <h5 class="text-muted font-serif">No authors found in this genre.</h5>
            </div>
        }
    </div>

</div>

<style>
    /* -----------------------------------------------------------------
           THEME VARIABLES & TYPOGRAPHY
           ----------------------------------------------------------------- */
    :root {
        --brand-navy: #002B5B;
        --brand-orange: #FF9F1C;
        --bg-warm: #fdfbf7;
        --text-dark: #2c3e50;
    }

    body {
        background-color: var(--bg-warm);
        color: var(--text-dark);
    }

    .font-serif {
        font-family: 'Merriweather', serif;
    }

    .font-sans {
        font-family: 'Inter', sans-serif;
    }

    .text-navy {
        color: var(--brand-navy) !important;
    }

    .text-orange {
        color: var(--brand-orange) !important;
    }

    .bg-navy {
        background-color: var(--brand-navy) !important;
        color: white;
    }

    .hover-navy:hover {
        color: var(--brand-navy) !important;
        text-decoration: underline !important;
    }

    /* -----------------------------------------------------------------
           GENRE HEADER Styling
           ----------------------------------------------------------------- */
    .genre-image-wrapper {
        width: 100%;
        max-width: 250px;
        aspect-ratio: 1/1; /* Square for genre usually looks better */
        border-radius: 8px;
        overflow: hidden;
        background: white;
        border: 4px solid white;
    }

        .genre-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Description Toggle Logic */
    .bio-text {
        line-height: 1.7;
        overflow: hidden;
        transition: max-height 0.3s ease;
    }

        .bio-text.collapsed {
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            max-height: 7.5em;
        }

        .bio-text.expanded {
            -webkit-line-clamp: unset;
            max-height: 1000px;
        }

    /* -----------------------------------------------------------------
           ITEM CARDS (Books & Authors)
           ----------------------------------------------------------------- */
    .item-card {
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

        .item-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 43, 91, 0.1) !important;
        }

    .img-wrapper {
        height: 220px;
        background-color: #f8f9fa;
        overflow: hidden;
    }

        .img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .item-card:hover .img-wrapper img {
        transform: scale(1.05);
    }

    .card-title {
        font-weight: 700;
        font-size: 0.95rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleBtn = document.getElementById("toggleDesc");

        if(toggleBtn) {
            toggleBtn.addEventListener("click", () => {
                const desc = document.getElementById("descText");

                if (desc.classList.contains("collapsed")) {
                    // Expand
                    desc.classList.remove("collapsed");
                    desc.classList.add("expanded");
                    toggleBtn.innerHTML = 'Show Less <i class="fa-solid fa-chevron-up ms-1"></i>';
                } else {
                    // Collapse
                    desc.classList.remove("expanded");
                    desc.classList.add("collapsed");
                    toggleBtn.innerHTML = 'Read More <i class="fa-solid fa-chevron-down ms-1"></i>';
                }
            });
        }
    });
</script>