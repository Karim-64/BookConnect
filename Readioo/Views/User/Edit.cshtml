<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
@model Readioo.ViewModel.UpdateUserVM

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<style>
    .edit-profile-wrapper {
        max-width: 650px;
        margin: 150px auto 50px auto; /* Fix header overlap */
        background: #ffffff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .edit-profile-wrapper h2 {
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        margin-top: 12px;
        font-weight: 600;
    }

    .save-btn {
        width: 100%;
        margin-top: 25px;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
    }
</style>

<div class="edit-profile-wrapper">
    <h2>Edit Profile</h2>

    <form method="post" enctype="multipart/form-data">

        @* <input type="hidden" asp-for="Id" /> *@

        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control"  />
        <span asp-validation-for="FirstName" class="text-danger"></span>

            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control"  />
            <span asp-validation-for="LastName" class="text-danger"></span>

            <label asp-for="Bio" class="form-label"></label>
            <input asp-for="Bio" class="form-control" />
            <span asp-validation-for="Bio" class="text-danger"></span>

            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control"  />
            <span asp-validation-for="City" class="text-danger"></span>

            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control"  />
            <span asp-validation-for="Country" class="text-danger"></span>

            <label asp-for="UserImageFile" class="form-label"></label>
            <input asp-for="UserImageFile" class="form-control"  />
            <span asp-validation-for="UserImageFile" class="text-danger"></span>

        <button class="btn btn-success save-btn" type="submit">Save Changes</button>
    </form>
</div>
</form>