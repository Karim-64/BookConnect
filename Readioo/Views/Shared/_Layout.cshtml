@using System.Security.Claims
@inject IUserService UserService

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    if (userId is null)
    {
        userId = "0";    
    }

    var user = await UserService.GetUserByIdAsync(int.Parse(userId));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Readioo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Added FontAwesome for icons used throughout the site -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Readioo.styles.css" asp-append-version="true" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <style>
        .navbar-nav .nav-link {
            padding: 10px 25px !important; /* Wider horizontal padding for pill shape */
            border-radius: 50px; /* Fully rounded 'Pill' corners */
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1); /* Smoother transition */
            font-weight: 600;
            font-size: 1.1rem; /* Refined font size */
            color: #444; /* Softer dark gray for normal state */
            letter-spacing: 0.5px; /* Slight spacing for readability */
        }

            .navbar-nav .nav-link:hover {
                background-color: #002B5B; /* Deep Navy Blue (Matches Logo Brand) */
                color: #fff !important;
                transform: translateY(-2px); /* Lift effect */
                box-shadow: 0 4px 12px rgba(0, 43, 91, 0.3); /* Soft blue shadow for depth */
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm sticky-top py-2">
            <div class="container-fluid px-5">

                <!-- Logo -->
                <a class="navbar-brand me-5" asp-controller="Home" asp-action="Index">
                    <!-- Kept width 190px, it balances well with larger text -->
                    <img src="~/images/Logoo.jpg" alt="Readioo" style="width: 100px; height: auto; object-fit: contain;">
                    <img src="~/images/Logo_name.jpg" alt="Readioo" style="width: 100px; height: auto; object-fit: contain;">
                </a>

                <!-- Mobile Toggle Button (Hamburger Menu) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible Content -->
                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- Navigation Links -->
                    
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item mx-3">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-dark" asp-controller="Book" asp-action="MyBooks">My Books</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-dark" asp-controller="Book" asp-action="Browse">Browse</a>
                        </li>
                        
                        @if (user is not null && user.IsAdmin)
                        {
                            <li class="nav-item mx-3">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                            </li>
                        }
                        
                    </ul>

                    <!-- Right Side: Search & Profile -->
                    <div class="d-flex align-items-center gap-4 mt-3 mt-lg-0">
                                                       
                        <div style="position: relative; display: inline-block;">
                            
                            <input type="text" id="searchBox" placeholder="Search Books" size= "30" class="search form-control bg-light border-start-0" aria-label="Search" autocomplete="off" />
                            <ul id="searchResults" class="dropdown-menu"></ul>
                        </div>


                        <!-- Profile Dropdown -->
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="userDropdown"
                               data-bs-toggle="dropdown" aria-expanded="false">

                                @if (user is not null && user.UserImage != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(user.UserImage)"
                                         alt="Profile" width="55" height="55" class="rounded-circle border shadow-sm"
                                         style="object-fit: cover;">
                                }
                                else
                                {
                                    <img src="/images/default-profile.png"
                                         alt="Profile" width="55" height="55" class="rounded-circle border shadow-sm"
                                         style="object-fit: cover;">
                                }
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 py-2" asp-controller="User" asp-action="Profile">
                                        <i class="fa-regular fa-user text-muted"></i> My Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 text-danger py-2" asp-controller="Account" asp-action="Logout">
                                        <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container py-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

