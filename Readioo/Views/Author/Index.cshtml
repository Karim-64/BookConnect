@model IEnumerable<Readioo.Models.Author>

@{
    ViewData["Title"] = "Manage Authors";

    // Helper to resolve image path
    string ResolveImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath)) return null;
        if (imagePath.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
            imagePath.StartsWith("https://", StringComparison.OrdinalIgnoreCase)) return imagePath;
        if (imagePath.StartsWith("~")) return Url.Content(imagePath);
        if (imagePath.StartsWith("/")) return Url.Content(imagePath);
        return Url.Content("~/" + imagePath);
    }
}
<style>
    /* Local Styles (Consistent with Book/Index) */
    :root {
        --brand-navy: #002B5B;
        --brand-orange: #FF9F1C;
        --bg-light: #f4f7f6;
    }

    body {
        background-color: var(--bg-light);
    }

    /* Header Styles */
    .bg-navy {
        background-color: var(--brand-navy) !important;
        color: white;
    }

    .text-navy {
        color: var(--brand-navy) !important;
    }

    /* Button Brand Primary */
    .btn-brand-primary {
        background-color: var(--brand-navy);
        color: white;
        border: none;
        padding: 10px 24px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s;
    }

        .btn-brand-primary:hover {
            background-color: #001f42;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 43, 91, 0.3);
        }

    /* Avatar Styling */
    .avatar-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid #e9ecef;
        background-color: #fff;
    }

    .author-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Table & Row Styles */
    .table-hover tbody tr:hover {
        background-color: #fcfcfc;
    }

    .hover-navy:hover {
        color: var(--brand-navy) !important;
        text-decoration: underline !important;
    }

    /* Action Buttons */
    .btn-outline-navy {
        color: var(--brand-navy);
        border-color: #dee2e6;
    }

        .btn-outline-navy:hover {
            background-color: var(--brand-navy);
            color: white;
            border-color: var(--brand-navy);
        }

    /* Fix for button groups to look seamless */
    .btn-group .btn {
        margin: 0;
    }
</style>

<div class="container my-5">

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <div>
            <h1 class="display-6 fw-bold" style="color: #002B5B;">
                <i class="fa-solid fa-pen-nib me-2"></i>Authors
            </h1>
            <p class="text-muted mb-0">Manage author profiles, biographies, and details.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-brand-primary shadow-sm">
                <i class="fa-solid fa-plus me-2"></i>Add New Author
            </a>
        </div>
    </div>

    <!-- Data Table Card -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-navy text-white">
                    <tr>
                        <th class="py-3 ps-4">Photo</th>
                        <th class="py-3">Name & Bio</th>
                        <th class="py-3">Origin</th>
                        <th class="py-3">Lifespan</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var item in Model)
                    {
                        var displayName = item.FullName ?? "Author";
                        <tr>
                            <!-- Photo -->
                            <td class="ps-4" style="width: 100px;">
                                <div class="avatar-wrapper">
                                    <img src="~/@item.AuthorImage"
                                         alt="@item.FullName"
                                         class="author-img"
                                         onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(displayName)&size=80&background=f1f5f9&color=002B5B&bold=true';" />
                                </div>
                            </td>

                            <!-- Name & Bio -->
                            <td style="max-width: 300px;">
                                <div class="d-flex flex-column">
                                    <span class="fw-bold text-navy fs-5">@item.FullName</span>
                                    <span class="text-muted small text-truncate" style="max-width: 280px;" title="@item.Bio">
                                        @(string.IsNullOrEmpty(item.Bio) ? "No biography available." : item.Bio)
                                    </span>
                                </div>
                            </td>

                            <!-- Origin -->
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-semibold text-dark">@item.BirthCountry</span>
                                    <span class="text-muted small">@item.BirthCity</span>
                                </div>
                            </td>

                            <!-- Lifespan -->
                            <td>
                                <div class="small">
                                    <div class="mb-1">
                                        <i class="fa-solid fa-cake-candles text-muted me-1" title="Born"></i>
                                        @if (item.BirthDate != default)
                                        {
                                            @item.BirthDate.ToString("MMM d, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </div>
                                    @if (item.DeathDate.HasValue)
                                    {
                                        <div class="text-muted">
                                            <i class="fa-solid fa-tombstone me-1" title="Died"></i>
                                            @item.DeathDate.Value.ToString("MMM d, yyyy")
                                        </div>
                                    }
                                </div>
                            </td>

                            <!-- Actions -->
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-navy"
                                       title="Edit Author">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" style="margin:0;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-end border-start-0"
                                                title="Delete Author"
                                                onclick="return confirm('Are you sure you want to permanently delete @item.FullName?');">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Back Navigation -->
    <div>
        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-muted hover-navy">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Admin Dashboard
        </a>
    </div>
</div>

