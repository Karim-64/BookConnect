@using Readioo.Business.DataTransferObjects.Author
@using Readioo.Business.DataTransferObjects.Genre
@model AuthorDto

@{
    ViewData["Title"] = Model.FullName + " - Readioo";

    // --- Helper methods ---
    string ResolveImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath)) return null;

        // External URL
        if (imagePath.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
            imagePath.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
            return imagePath;

        // Paths like ~/images/... or /uploads/...
        if (imagePath.StartsWith("~") || imagePath.StartsWith("/"))
            return Url.Content(imagePath);

        // Stored relative path
        return Url.Content("~/" + imagePath);
    }

    string GetAvatar(string name, string imagePath)
    {
        var resolved = ResolveImagePath(imagePath);
        if (!string.IsNullOrEmpty(resolved)) return resolved;

        // Avatar fallback
        return "https://ui-avatars.com/api/?name=" +
            Uri.EscapeDataString(name ?? "Author") +
            "&size=400&background=f1f5f9&color=002B5B&bold=true";
    }

    var authorImg = GetAvatar(Model.FullName, Model.AuthorImage);
}

<!-- Google Fonts Import -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<div class="container my-5">

    <!-- Navigation -->
    <div class="mb-4">
        <a asp-action="Browse" class="text-decoration-none text-muted hover-navy font-sans">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Authors
        </a>
    </div>

    <!-- Author Profile Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-5">
        <div class="row g-0">
            <!-- Author Image Column -->
            <div class="col-md-4 col-lg-3 bg-light d-flex align-items-center justify-content-center p-4 position-relative">
                <div class="author-image-wrapper shadow-sm">
                    <img src="@authorImg"
                         alt="@Model.FullName"
                         class="img-fluid"
                         onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.FullName)&size=400&background=f1f5f9&color=002B5B&bold=true';" />
                </div>
            </div>

            <!-- Author Info Column -->
            <div class="col-md-8 col-lg-9">
                <div class="card-body p-4 p-lg-5 d-flex flex-column h-100">

                    <!-- Header -->
                    <div class="mb-4">
                        <h1 class="display-4 fw-bold text-navy font-serif mb-2">@Model.FullName</h1>
                        <div class="d-flex flex-wrap gap-3 text-muted font-sans small text-uppercase fw-semibold tracking-wide">
                            @if (!string.IsNullOrEmpty(Model.BirthCountry))
                            {
                                <span><i class="fa-solid fa-earth-americas me-1 text-orange"></i> @Model.BirthCity, @Model.BirthCountry</span>
                            }

                            <!-- BirthDate is Non-Nullable (DateOnly) -->
                            @if (Model.BirthDate != default)
                            {
                                <span class="d-flex align-items-center">
                                    <span class="mx-2 opacity-50">•</span>
                                    <span>Born: @Model.BirthDate.Year</span>
                                </span>
                            }

                            <!-- DeathDate is Nullable (DateOnly?) -->
                            @if (Model.DeathDate.HasValue)
                            {
                                <span class="d-flex align-items-center">
                                    <span class="mx-2 opacity-50">•</span>
                                    <!-- Must use .Value.Year for nullable types -->
                                    <span>Died: @Model.DeathDate.Value.Year</span>
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Biography -->
                    <div class="mb-4 flex-grow-1">
                        <h5 class="fw-bold text-navy font-sans mb-3">Biography</h5>
                        <div class="bio-container font-serif text-secondary position-relative">
                            <p id="bioText" class="bio-text collapsed mb-0">
                                @(string.IsNullOrEmpty(Model.Bio) ? "No biography available for this author." : Model.Bio)
                            </p>
                            @if (!string.IsNullOrEmpty(Model.Bio) && Model.Bio.Length > 300)
                            {
                                <button id="toggleDesc" class="btn btn-link p-0 mt-2 text-orange text-decoration-none fw-bold font-sans small">
                                    Read More <i class="fa-solid fa-chevron-down ms-1"></i>
                                </button>
                            }
                        </div>
                    </div>

                    <!-- ✅ NEW: Genres Section -->
                    @if (Model.Genres != null && Model.Genres.Any())
                    {
                        <div class="mb-4">
                            <h5 class="fw-bold text-navy font-sans mb-3">
                                <i class="fa-solid fa-tag me-2 text-orange"></i>Writing Genres
                            </h5>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var genre in Model.Genres)
                                {
                                    <a asp-controller="Genre" asp-action="Details" asp-route-id="@genre.Id"
                                       class="badge bg-light border border-navy text-navy text-decoration-none"
                                       style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                                        @genre.GenreName
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Author's Books Section -->
    <div class="author-books-section">
        <div class="d-flex align-items-center mb-4 border-bottom pb-3">
            <h3 class="fw-bold text-navy font-serif mb-0">
                <i class="fa-solid fa-book-open me-2 text-orange"></i>Bibliography
            </h3>
            <span class="badge bg-light text-secondary ms-3 rounded-pill border">
                @(Model.Books?.Count() ?? 0) Books
            </span>
        </div>

        @if (Model.Books != null && Model.Books.Any())
        {
            <div class="row g-4">
                @foreach (var book in Model.Books)
                {
                    var bookImgUrl = ResolveImagePath(book.BookImage);

                    <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                        <div class="card h-100 border-0 shadow-sm book-card">
                            <a href="@Url.Action("Details", "Book", new { id = book.BookId })" class="text-decoration-none">
                                <div class="position-relative book-img-wrapper">
                                    <img src="@(string.IsNullOrEmpty(bookImgUrl) ? "https://placehold.co/180x250?text=No+Cover" : bookImgUrl)"
                                         class="card-img-top"
                                         alt="@book.Title"
                                         onerror="this.src='https://placehold.co/180x250?text=No+Cover'" />
                                </div>
                                <div class="card-body p-3">
                                    <div class="book-card-title text-navy font-serif" title="@book.Title">@book.Title</div>
                                    <div class="d-flex align-items-center small mt-2">
                                        <i class="fa-solid fa-star text-warning me-1"></i>
                                        <span class="fw-bold text-dark">@book.Rate.ToString("0.0")</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                <i class="fa-solid fa-feather fa-3x text-muted mb-3 opacity-25"></i>
                <h5 class="text-muted font-serif">No books found for this author.</h5>
            </div>
        }
    </div>
</div>

<style>
    /* -----------------------------------------------------------------
           THEME VARIABLES & TYPOGRAPHY
           ----------------------------------------------------------------- */
    :root {
        --brand-navy: #002B5B;
        --brand-orange: #FF9F1C;
        --bg-warm: #fdfbf7;
        --text-dark: #2c3e50;
    }

    body {
        background-color: var(--bg-warm);
        color: var(--text-dark);
    }

    .font-serif {
        font-family: 'Merriweather', serif;
    }

    .font-sans {
        font-family: 'Inter', sans-serif;
    }

    .text-navy {
        color: var(--brand-navy) !important;
    }

    .text-orange {
        color: var(--brand-orange) !important;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .border-navy {
        border-color: var(--brand-navy) !important;
    }

    .hover-navy:hover {
        color: var(--brand-navy) !important;
        text-decoration: underline !important;
    }

    /* -----------------------------------------------------------------
           AUTHOR PROFILE Styling
           ----------------------------------------------------------------- */
    .author-image-wrapper {
        width: 100%;
        max-width: 250px;
        aspect-ratio: 3/4;
        border-radius: 8px;
        overflow: hidden;
        background: white;
        border: 4px solid white;
    }

        .author-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .tracking-wide {
        letter-spacing: 0.05em;
    }

    /* Biography Toggle Logic */
    .bio-text {
        line-height: 1.7;
        overflow: hidden;
        transition: max-height 0.3s ease;
    }

        .bio-text.collapsed {
            display: -webkit-box;
            -webkit-line-clamp: 4; /* Show 4 lines */
            -webkit-box-orient: vertical;
            max-height: 7.5em; /* Fallback */
        }

        .bio-text.expanded {
            -webkit-line-clamp: unset;
            max-height: 1000px;
        }

    /* -----------------------------------------------------------------
           BUTTONS
           ----------------------------------------------------------------- */
    .btn-outline-navy {
        color: var(--brand-navy);
        border: 1px solid var(--brand-navy);
        transition: all 0.2s;
    }

        .btn-outline-navy:hover {
            background-color: var(--brand-navy);
            color: white;
        }

    /* -----------------------------------------------------------------
           BOOK CARDS (Mini Version)
           ----------------------------------------------------------------- */
    .book-card {
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 43, 91, 0.1) !important;
        }

    .book-img-wrapper {
        height: 220px;
        background-color: #f8f9fa;
        overflow: hidden;
    }

        .book-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .book-card:hover .book-img-wrapper img {
        transform: scale(1.05);
    }

    .book-card-title {
        font-weight: 700;
        font-size: 0.95rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* ✅ NEW: Genre Badges Styling */
    .badge {
        transition: all 0.2s ease;
    }

    .badge:hover {
        background-color: var(--brand-navy) !important;
        color: white !important;
        transform: translateY(-2px);
    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleBtn = document.getElementById("toggleDesc");

        if(toggleBtn) {
            toggleBtn.addEventListener("click", () => {
                const bio = document.getElementById("bioText");
                const icon = toggleBtn.querySelector("i");

                if (bio.classList.contains("collapsed")) {
                    // Expand
                    bio.classList.remove("collapsed");
                    bio.classList.add("expanded");
                    toggleBtn.innerHTML = 'Show Less <i class="fa-solid fa-chevron-up ms-1"></i>';
                } else {
                    // Collapse
                    bio.classList.remove("expanded");
                    bio.classList.add("collapsed");
                    toggleBtn.innerHTML = 'Read More <i class="fa-solid fa-chevron-down ms-1"></i>';
                }
            });
        }
    });
</script>