@using Readioo.Business.DataTransferObjects.Author
@using Readioo.Business.DataTransferObjects.Genre
@model IEnumerable<AuthorDto>

@{
    ViewData["Title"] = "Browse Authors";

    // --- Pagination Logic (COPIED FROM BOOK BROWSE) ---
    // Controller passes these via ViewBag
    int currentPage = (ViewBag.CurrentPage as int?) ?? 1;
    int totalPages = (ViewBag.TotalPages as int?) ?? 1;

    // Retrieve genres from ViewBag passed by the controller
    var genres = ViewBag.Genres as IEnumerable<GenreDto>;

    string GetAvatar(string name, string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath))
            return "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(name) + "&size=400&background=f1f5f9&color=002B5B&bold=true";

        if (imagePath.StartsWith("http", StringComparison.OrdinalIgnoreCase))
            return imagePath;

        if (imagePath.StartsWith("~") || imagePath.StartsWith("/"))
            return Url.Content(imagePath);

        return Url.Content("~/" + imagePath);
    }
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<style>
    /* -----------------------------------------------------------------
            THEME VARIABLES & TYPOGRAPHY
            (Copied from Book Browse for consistent styling)
            ----------------------------------------------------------------- */
    :root {
        --brand-navy: #002B5B;
        --brand-orange: #FF9F1C;
        --brand-orange-soft: #fff3e0;
        --bg-warm: #fdfbf7; /* Warmer, paper-like background */
        --text-dark: #2c3e50;
    }

    body {
        background-color: var(--bg-warm);
        color: var(--text-dark);
    }

    .font-serif {
        font-family: 'Merriweather', serif;
    }

    .font-sans {
        font-family: 'Inter', sans-serif;
    }

    .text-navy {
        color: var(--brand-navy) !important;
    }

    .text-orange {
        color: var(--brand-orange) !important;
    }

    /* -----------------------------------------------------------------
            SIDEBAR FILTERS (Copied)
            ----------------------------------------------------------------- */
    .filter-panel {
        background: #fff;
    }

    .list-group-item {
        border: none;
        padding: 12px 20px;
        color: #555;
        font-weight: 500;
        transition: all 0.2s ease;
        margin-bottom: 2px;
        background: transparent;
        border-left: 4px solid transparent;
        cursor: pointer;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
            color: var(--brand-navy);
            padding-left: 25px;
        }

        /* Active State */
        .list-group-item.active-filter {
            background-color: #f0f4f8;
            color: var(--brand-navy);
            border-left-color: var(--brand-navy);
            font-weight: 600;
        }

            .list-group-item.active-filter:hover {
                padding-left: 20px;
            }

        .list-group-item .fa-chevron-right {
            opacity: 0;
            transition: opacity 0.2s;
        }

        .list-group-item.active-filter .fa-chevron-right {
            opacity: 1;
        }

    /* -----------------------------------------------------------------
            AUTHOR CARD & IMAGE PRESENTATION (Similar to Book Card)
            ----------------------------------------------------------------- */
    .author-card {
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s;
        background: white;
        overflow: hidden;
    }

        .author-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0, 43, 91, 0.12) !important;
        }

    .author-cover-container {
        height: 280px; /* Adjusted height for portrait/avatar style */
        position: relative;
        background-color: #f1f1f1;
        overflow: hidden;
        /* For authors, make the container aspect ratio match the general avatar style */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* The blurred background layer */
    .author-cover-blur {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-size: cover;
        background-position: center;
        filter: blur(15px) brightness(0.9);
        transform: scale(1.1);
    }

    /* The main crisp image */
    .author-img {
        position: relative;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Use cover for author portrait */
        z-index: 1;
        transition: transform 0.5s ease;
        /* Optional: Circle or rounded for avatars */
        border-radius: 0;
    }

    /* Override the generic style for better author display in grid */
    .author-cover-container {
        height: 340px;
        position: relative;
        background-color: #f1f1f1;
        overflow: hidden;
    }

    .author-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .author-card:hover .author-img {
        transform: scale(1.05);
    }

    .link-hover-orange:hover {
        color: var(--brand-orange) !important;
    }

    .btn-navy-soft {
        background-color: #e9eff5;
        color: var(--brand-navy);
        border: 1px solid transparent;
        transition: all 0.2s;
    }

        .btn-navy-soft:hover {
            background-color: var(--brand-navy);
            color: white;
            box-shadow: 0 4px 10px rgba(0, 43, 91, 0.3);
        }

    /* -----------------------------------------------------------------
            BUTTONS & PAGINATION (Copied)
            ----------------------------------------------------------------- */
    .btn-outline-light.text-secondary {
        border-color: #dee2e6;
    }

        .btn-outline-light.text-secondary.active {
            background-color: var(--brand-navy);
            color: white !important;
            border-color: var(--brand-navy);
        }

    .page-link {
        color: var(--brand-navy);
        background-color: transparent;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        transition: all 0.2s;
    }

        .page-link:hover {
            background-color: #e9ecef;
            color: var(--brand-orange);
        }

    .page-item.active .page-link {
        background-color: var(--brand-navy);
        color: white;
    }

    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background-color: transparent;
        opacity: 0.6;
    }

    .z-2 {
        z-index: 2;
    }

    /* -----------------------------------------------------------------
            LIST VIEW TOGGLE STYLES (ADJUSTED FOR AUTHORS)
            ----------------------------------------------------------------- */
    /* When #authorGrid has class .list-view */
    #authorGrid.list-view .author-item {
        width: 100%;
        flex: 0 0 100%;
        max-width: 100%;
    }

    #authorGrid.list-view .author-card {
        flex-direction: row;
        height: auto;
        min-height: 220px;
    }

    #authorGrid.list-view .author-cover-container {
        width: 180px;
        height: 220px; /* Fixed height for consistent list view */
        flex-shrink: 0;
    }

    #authorGrid.list-view .author-img {
        object-fit: cover;
    }


    #authorGrid.list-view .card-body {
        justify-content: center;
        padding-left: 2rem !important;
        padding-right: 2rem !important;
    }

    /* Adjustments for list view responsiveness */
    @@media (max-width: 576px) {
        #authorGrid.list-view .author-card {
            flex-direction: column;
        }

        #authorGrid.list-view .author-cover-container {
            width: 100%;
            height: 300px;
        }
    }
</style>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        // --- View Toggle Logic ---
        $('#btnList').click(function() {
            $('#authorGrid').addClass('list-view');
            $('#btnList').addClass('active');
            $('#btnGrid').removeClass('active');
        });

        $('#btnGrid').click(function() {
            $('#authorGrid').removeClass('list-view');
            $('#btnGrid').addClass('active');
            $('#btnList').removeClass('active');
        });

        // --- Genre Filtering Logic (Adjusted for data-genres attribute) ---
        $('#genreFilter .list-group-item').click(function() {
            $('#genreFilter .list-group-item').removeClass('active-filter');
            $(this).addClass('active-filter');

            var selectedGenre = $(this).data('genre');
            var visibleCount = 0;

            if(selectedGenre === 'all') {
                $('#authorGrid .author-item').fadeIn(300);
                visibleCount = $('#authorGrid .author-item').length;
            } else {
                $('#authorGrid .author-item').hide();

                $('#authorGrid .author-item').filter(function() {
                     // Check the data-genres attribute
                     var genres = $(this).data('genres');
                     // Note: We use data-genres here (plural) and check for existence
                     return genres && genres.toLowerCase().indexOf(selectedGenre.toLowerCase()) > -1;
                }).fadeIn(300);

                visibleCount = $('#authorGrid .author-item').filter(function() {
                     var genres = $(this).data('genres');
                     return genres && genres.toLowerCase().indexOf(selectedGenre.toLowerCase()) > -1;
                }).length;
            }

            // --- No Results Message Toggle ---
            if (visibleCount === 0) {
                $('#noResultsMessage').removeClass('d-none');
            } else {
                $('#noResultsMessage').addClass('d-none');
            }
        });
    });
</script>

<div class="container my-5">

    <div class="row mb-5">
        <div class="col-12 border-bottom pb-3">
            <h1 class="display-5 fw-bold font-serif text-navy">
                <i class="fa-solid fa-pen-nib me-2"></i>Browse Authors
            </h1>
            <p class="lead text-muted mb-0 font-sans">Discover talented writers and explore their literary works.</p>
        </div>
    </div>

    <div class="row">

        <aside class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-3 filter-panel sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-2">
                    <h5 class="fw-bold text-navy font-serif">
                        <i class="fa-solid fa-filter me-2 text-orange"></i>Filter by Genre
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush font-sans" id="genreFilter">
                        <button type="button"
                                class="list-group-item list-group-item-action active-filter d-flex justify-content-between align-items-center"
                                data-genre="all">
                            <span><i class="fa-solid fa-layer-group me-2 opacity-50"></i>All Genres</span>
                            <i class="fa-solid fa-chevron-right small"></i>
                        </button>

                        @if (genres != null && genres.Any())
                        {
                            foreach (var genre in genres)
                            {
                                <button type="button"
                                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                        data-genre="@genre.GenreName.ToLower()">
                                    @genre.GenreName
                                </button>
                            }
                        }
                        else
                        {
                            <button class="list-group-item list-group-item-action">No Genres Loaded</button>
                        }

                    </div>
                </div>
            </div>
        </aside>

        <section class="col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white rounded shadow-sm border toolbar-container">
                <div class="d-flex align-items-center">
                    <span class="text-muted small me-2 font-sans">Page @currentPage of @totalPages</span>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="btn-group" role="group" aria-label="View toggle">
                        <button type="button" class="btn btn-lg btn-outline-light text-secondary active" id="btnGrid" style="width: 60px;" title="Grid View">
                            <i class="fa-solid fa-border-all"></i>
                        </button>
                        <button type="button" class="btn btn-lg btn-outline-light text-secondary" id="btnList" style="width: 60px;" title="List View">
                            <i class="fa-solid fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="row g-4" id="authorGrid">
                @if (Model != null && Model.Any())
                {
                    @foreach (var author in Model)
                    {
                        var genreString = author.Genres != null ? string.Join(" ", author.Genres.Select(g => g.GenreName.ToLower())) : "";
                        var avatarUrl = GetAvatar(author.FullName, author.AuthorImage);

                        <div class="col-sm-6 col-md-4 col-xl-4 author-item" data-genres="@genreString">
                            <div class="card h-100 border-0 shadow-sm author-card d-flex">
                                <div class="author-cover-container">
                                    <a asp-controller="Author" asp-action="Details" asp-route-id="@author.AuthorId" class="d-block h-100 w-100 position-relative overflow-hidden">
                                        <div class="author-cover-blur" style="background-image: url('@avatarUrl');"></div>
                                        <img src="@avatarUrl"
                                             class="author-img"
                                             alt="@author.FullName"
                                             onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(author.FullName)&size=400&background=f1f5f9&color=002B5B&bold=true'">
                                    </a>
                                </div>

                                <div class="card-body d-flex flex-column p-3">
                                    <h5 class="card-title fw-bold text-truncate mb-1 font-serif">
                                        <a asp-controller="Author" asp-action="Details" asp-route-id="@author.AuthorId"
                                           class="text-decoration-none text-navy stretched-link link-hover-orange">
                                            @author.FullName
                                        </a>
                                    </h5>

                                    <div class="text-muted small font-sans mb-2">
                                        @if (!string.IsNullOrEmpty(author.BirthCountry))
                                        {
                                            <span><i class="fa-solid fa-map-pin me-1 text-orange"></i>@author.BirthCity, @author.BirthCountry</span>
                                        }
                                        else
                                        {
                                            <span>&nbsp;</span>
                                        }
                                    </div>

                                    <p class="card-text text-muted small mb-3 flex-grow-1 font-sans" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; line-height: 1.5;">
                                        @(string.IsNullOrEmpty(author.Bio) ? "No biography available for this author." : author.Bio)
                                    </p>

                                    @if (author.Genres != null && author.Genres.Any())
                                    {
                                        <div class="mb-3 position-relative z-2">
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var genre in author.Genres.Take(2))
                                                {
                                                    <span class="badge bg-light border border-navy text-navy font-sans small fw-normal">
                                                        @genre.GenreName
                                                    </span>
                                                }
                                                @if (author.Genres.Count() > 2)
                                                {
                                                    <span class="badge bg-light text-navy font-sans small">
                                                        +@(author.Genres.Count() - 2)
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <div class="mt-auto position-relative z-2">
                                        <a asp-controller="Author" asp-action="Details" asp-route-id="@author.AuthorId"
                                           class="btn btn-sm btn-navy-soft w-100 rounded-pill font-sans fw-bold">
                                            View Profile <i class="fa-solid fa-arrow-right ms-1"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="fa-solid fa-users fa-3x text-muted mb-3 opacity-25"></i>
                        <h4 class="text-muted font-serif">No authors found in the collection.</h4>
                    </div>
                }
            </div>

            <div id="noResultsMessage" class="text-center py-5 d-none">
                <i class="fa-solid fa-filter-circle-xmark fa-3x text-muted mb-3 opacity-25"></i>
                <h4 class="text-muted font-serif">No authors found in this genre.</h4>
            </div>

            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle mx-1"
                               asp-controller="Author"
                               asp-action="Browse"
                               asp-route-page="@(currentPage - 1)"
                               aria-label="Previous">
                                <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>

                        @{
                            int startPage = Math.Max(1, currentPage - 2);
                            int endPage = Math.Min(totalPages, currentPage + 2);
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item"><a class="page-link border-0 rounded-circle mx-1" asp-action="Browse" asp-route-page="1">1</a></li>
                            @if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link border-0 rounded-circle mx-1">...</span></li>
                            }
                        }

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link border-0 rounded-circle mx-1 shadow-sm"
                                   asp-controller="Author"
                                   asp-action="Browse"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (endPage < totalPages)
                        {
                            @if (endPage < totalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link border-0 rounded-circle mx-1">...</span></li>
                            }
                            <li class="page-item"><a class="page-link border-0 rounded-circle mx-1" asp-action="Browse" asp-route-page="@totalPages">@totalPages</a></li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle mx-1"
                               asp-controller="Author"
                               asp-action="Browse"
                               asp-route-page="@(currentPage + 1)"
                               aria-label="Next">
                                <i class="fa-solid fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }


        </section>
    </div>
</div>