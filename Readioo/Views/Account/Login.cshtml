@using Readioo.ViewModel
@model LoginVM

@{
    ViewData["Title"] = "Login to Readioo";
    // Assuming your file is named _SimpleLayout.cshtml as per your previous code
    // If you want the full header/footer, change this to "_Layout"
    Layout = "_SimpleLayout";
}

<!-- Use the new .login-container class from site.css for perfect centering -->
<div class="login-container">

    <!-- Use .login-box for the styled white card -->
    <div class="login-box">

        <!-- Logo Section -->
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index">
                <img class="login-logo" src="~/images/Logo.jpg" alt="Readioo Logo">
            </a>
            <h1 class="h4 mb-3 fw-bold text-dark">Welcome Back!</h1>
            <p class="text-muted small">Please sign in to your account</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3 small"></div>

            <!-- Email Input -->
            <div class="form-group mb-3 text-start">
                <label asp-for="Email" class="form-label fw-bold small">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input type="email" asp-for="Email" class="form-control border-start-0 ps-0" placeholder="name@example.com">
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password Input -->
            <div class="form-group mb-3 text-start">
                <label asp-for="Password" class="form-label fw-bold small">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input type="password" asp-for="Password" class="form-control border-start-0 ps-0" >
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label small text-muted" asp-for="RememberMe">
                        Remember me
                    </label>
                </div>
                <div>
                    <a class="text-decoration-none small fw-semibold" href="#">Forgot Password?</a>
                </div>
            </div>

            <!-- Submit Button (Uses site.css .submission or .btn-primary) -->
            <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill fw-bold shadow-sm">
                Sign In
            </button>

        </form>

        <div class="my-4 d-flex align-items-center">
            <hr class="flex-grow-1 my-0" style="color: #e0e0e0;">
            <span class="px-3 text-muted small">OR</span>
            <hr class="flex-grow-1 my-0" style="color: #e0e0e0;">
        </div>

        <div class="text-center">
            <p class="mb-2 text-muted small">Don't have an account yet?</p>
            <a class="btn btn-outline-dark w-100 rounded-pill" asp-controller="Account" asp-action="Register">
                Create New Account
            </a>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}